<div class="image">
    <%= image_tag @entry.author.image %>
</div>
<p><%= @entry.author.name %></p>

<h2><%= @entry.title %></h2>

    <% if current_user == @entry.author %>

        <p><%= link_to "編集", [:edit, @entry] %></p>

    <% end %>

    <%= simple_format(@entry.body) %>
    
    <% if admin_signed_in? %>
        <p><input type="button" value="この人とチャットする"></p>
    <% end %>
<%= render "footer", entry: @enrty %>