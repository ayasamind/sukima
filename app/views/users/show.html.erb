<div class="profile">
  <div class="post_head">
    <img class="title" src="/assets/mypage_kotoba.png">
  </div>
  <div class="student_image">
    <%= image_tag @user.image %>
  </div>
  <h2><%= @user.name %></h2>
  <table class="companies">
    <tr>
      <th>名前</th>
        <td><%= @user.name %></td>
    </tr>

    <tr>
      <th>性別</th>
      <td><%= @user.gender == 0 ? "男" : "女" %></td>
    </tr>

    <tr>
      <th>大学</th>
      <td><%= @user.education %></td>
    </tr>

    <tr>
      <th>学部</th>
      <td><%= @user.atschool %></td>
    </tr>

    <tr>
      <th>働きたい県</th>
      <td><%= @user.address %></td>
    </tr>
    
    <tr>
      <th>スキル</th>
      <td><%= @user.skills%></td>
    </tr>
  </table>    
  <div class="mypage_introduce">
    <p class="mypage_label">自己紹介</p>
    <div class="introduce_text">
      <%= @user.introduce %>
    </div>
  </div>


  <%= link_to image_tag("/assets/edit_btn.png"), edit_user_path, class: "mypage_edit_btn" %></p>
  <p><%= link_to '投稿一覧', :entries %></p>
</div>


