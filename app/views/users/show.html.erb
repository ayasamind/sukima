<% provide(:title, @users.name) %>


<div class="profile">
 <div class="body_ya">
  <div class="post_head">
    <img class="title" src="/assets/mypage_kotoba.png">
  </div>
 <div class="student_image">
 <%= image_tag @users.image %>
</div>
<h2><%= @users.name %></h2>
 
<table class="companies">
<tr>
<th>名前</th>
<td><%= @users.name %></td>
</tr>

<tr>
<th>フリガナ</th>
<td><%= @users.skills%></td>
</tr>


<tr>
<th>性別</th>
<td><%= @users.gender == 0 ? "男" : "女" %></td>
</tr>


<tr>
<th>大学</th>
<td><%= @users.education %></td>
</tr>

<tr>
<th>学部</th>
<td><%= @users.atschool %></td>
</tr>

<tr>
<th>働きたい県</th>
<td><%= @users.address %></td>
</tr>

<tr>
<th>自己紹介</th>
<td><%= @users.introduce %></td>
</tr>


</table>
</div>
 <p><%= link_to 'プロフィール変更', edit_user_registration_path %></p>
 <p><%= link_to '投稿一覧', :entries %></p>
</div>
 
